@model int
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container bg-secondary">
    <header class="text-center" style="margin-top: 10px;">
        <div class="row">
            <h2 class="col text-light">CookBook</h2>
            <div class="col-6"></div>
            <div class="col">
                <a href="/recipe/list" class="btn btn-light">Receitas</a>
                @if (Context.Session.GetString("UserName") == null){
                    <a href="/user/register" class="btn btn-light">New User</a>
                    <a href="/user/login" class="btn btn-light">Login</a>
                } else {
                    <a href="/recipe/favorites" class="btn btn-light">Favoritos</a>
                    <a href="/user/info" class="btn btn-light">@Context.Session.GetString("UserName")</a>
                }
            </div>
        </div>
    </header>
    <main class="card bg-light">
        <div class="card-body">

            <form action="/comment/save" method="post">
                <div class="form-floating mb-3">
                    <textarea type="text" name="Content" id="Content" placeholder="Comentário" class="form-control" required></textarea>
                    <label for="Content">Comentário</label>
                </div>
                
                <input type="hidden" name="ParentId" value="@Model">
                <button class="btn btn-primary">Comentar</button>
            </form>
            <br>
            <a href="/recipe/show/@Model" class="btn btn-danger">Voltar</a>

        </div>
    </main>
</body>
</html>