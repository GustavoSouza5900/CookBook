@model List<CookBook.Models.Recipe>
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar Receitas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body class="container bg-secondary">
    <header class="text-center" style="margin-top: 10px;">
        <div class="row">
            <h2 class="col text-light">CookBook</h2>
            <div class="col-6"></div>
            <div class="col">
                <a href="/recipe/list" class="btn btn-light">Receitas</a>
                @if (Context.Session.GetString("UserName") == null){
                    <a href="/user/register" class="btn btn-light">New User</a>
                    <a href="/user/login" class="btn btn-light">Login</a>
                } else {
                    <a href="/user/info" class="btn btn-light">@Context.Session.GetString("UserName")</a>
                }
            </div>
        </div>
    </header>
    <main class="card bg-light">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Avaliação</th>
                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var recipe in Model) {
                        <tr>
                            <td><a href="/recipe/show/@recipe.RecipeId" class="btn btn-outline-primary">@recipe.Name</a></td>
                            <td>@recipe.Stars</td>
                        </tr>
                }
                </tbody>
            </table>
            <a href="/recipe/new" class="btn btn-primary">Nova Receita</a>
        </div>
    </main>
</body>
</html>