@model CookBook.Models.Recipe
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Recipe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body class="container bg-secondary">
    <header class="text-center" style="margin-top: 10px;">
        <div class="row">
            <h2 class="col text-light">CookBook</h2>
            <div class="col-2"></div>
            <div class="col">
                <a href="/recipe/list" class="btn btn-light">Receitas</a>
                @if (Context.Session.GetString("UserName") == null){
                    <a href="/user/register" class="btn btn-light">New User</a>
                    <a href="/user/login" class="btn btn-light">Login</a>
                } else {
                    <a href="/recipe/favorites" class="btn btn-light">Favoritos</a>
                    <a href="/user/info" class="btn btn-light">@Context.Session.GetString("UserName")</a>
                }
            </div>
        </div>
    </header>
    <main class="card bg-light">
        <div class="card-body">
            <h1>Update the recipe</h1>

            <form action="/recipe/update" method="post" enctype="multipart/form-data">
                <h4>Nomeie sua receita</h4>
                <div class="form-floating">
                    <input placeholder="Name" id="Name" name="Name" value="@Model.Name" class="form-control">
                    <label for="Name">Recipe name</label>
                </div>
                <br>
                <h4>Descreva sua receita</h4>
                <div class="form-floating">
                    <input placeholder="Descreva a receita" name="Steps" value="@Model.Steps" class="form-control">
                    <label for="Steps">Passo a passo...</label>
                </div>
                <br>

                <input type="hidden" name="Id" value="@Model.RecipeId">

                <button class="btn btn-primary">Salvar</button>
            </form>
            <br>
            <a href="/recipe/show/@Model.RecipeId" class="btn btn-danger">Voltar</a>
        </div>
    </main>
</body>
</html>