<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Usuário</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container bg-secondary">
    <header class="text-center" style="margin-top: 10px;">
        <div class="row">
            <h2 class="col text-light">CookBook</h2>
            <div class="col-6"></div>
            <div class="col">
                <a href="/recipe/list" class="btn btn-light">Receitas</a>
                @if (Context.Session.GetString("UserName") == null){
                    <a href="/user/register" class="btn btn-light">New User</a>
                    <a href="/user/login" class="btn btn-light">Login</a>
                } else {
                    <a href="/user/info" class="btn btn-light">@Context.Session.GetString("UserName")</a>
                }
            </div>
        </div>
    </header>
    <main class="card bg-light">
        <div class="card-body">
            <h1>Cadastro de Usuário</h1>

            <form action="/user/register" method="post">
                @if (ViewBag.Exist == true){
                    <div class="alert alert-danger">
                        <p>Email já cadastrado</p>
                    </div>
                }
                <div class="form-floating mb-3">
                    <input type="text" placeholder="Nome" id="Name" name="Name" class="form-control" required>
                    <label for="Name">Nome</label>
                </div>
                
                <div class="form-floating mb-3">
                    <input type="email" placeholder="Email" id="Email" name="Email" class="form-control" required>
                    <label for="Email">Email</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" placeholder="Senha" id="Password" name="Password" class="form-control" required>
                    <label for="Password">Senha</label>
                </div>

                <button class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </main>
</body>
</html>
