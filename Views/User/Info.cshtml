<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Informações do usuário</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body class="container bg-secondary">
    <header class="text-center" style="margin-top: 10px;">
        <div class="row">
            <h2 class="col text-light">CookBook</h2>
            <div class="col-6"></div>
            <div class="col">
                <a href="/recipe/list" class="btn btn-light">Receitas</a>
                @if (Context.Session.GetString("UserName") == null){
                    <a href="/user/register" class="btn btn-light">New User</a>
                    <a href="/user/login" class="btn btn-light">Login</a>
                } else {
                    <a href="/user/info" class="btn btn-light">@Context.Session.GetString("UserName")</a>
                }
            </div>
        </div>
    </header>
    <main class="card bg-light">
        <div class="card-body">
            <h1>Nome:</h1>
            <h4>@Context.Session.GetString("UserName")</h4>
            <br>
            <a href="/comment/favorites" class="btn btn-primary">Favoritos</a>
            <br>
            <br>
            <a href="/user/update/" class="btn btn-warning">Atualizar informações</a>
            <a href="/user/accept/" class="btn btn-danger">Deletar usuário</a>
            <br>
            <br>
            <a href="/user/logout" class="btn btn-outline-danger">Encerrar sessão</a>
        </div>
    </main>
</body>
</html>